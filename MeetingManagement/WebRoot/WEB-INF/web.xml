<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<!-- =======================servlet======================== -->
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>servlet.RegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegGetDepServlet</servlet-name>
		<servlet-class>servlet.RegGetDepServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>UpdateEmpStatusServlet</servlet-name>
    <servlet-class>servlet.UpdateEmpStatusServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ApproveAccountServlet</servlet-name>
    <servlet-class>servlet.ApproveAccountServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SelectDepByIdServlet</servlet-name>
    <servlet-class>servlet.SelectDepByIdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DepartmentsServlet</servlet-name>
    <servlet-class>servlet.DepartmentsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateDepServlet</servlet-name>
    <servlet-class>servlet.UpdateDepServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddDepServlet</servlet-name>
    <servlet-class>servlet.AddDepServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteDepSerlvet</servlet-name>
    <servlet-class>servlet.DeleteDepSerlvet</servlet-class>
  </servlet>








	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegGetDepServlet</servlet-name>
		<url-pattern>/RegGetDepServlet</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateEmpStatusServlet</servlet-name>
    <url-pattern>/UpdateEmpStatusServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ApproveAccountServlet</servlet-name>
    <url-pattern>/ApproveAccountServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SelectDepByIdServlet</servlet-name>
    <url-pattern>/SelectDepByIdServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DepartmentsServlet</servlet-name>
    <url-pattern>/DepartmentsServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateDepServlet</servlet-name>
    <url-pattern>/UpdateDepServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddDepServlet</servlet-name>
    <url-pattern>/AddDepServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteDepSerlvet</servlet-name>
    <url-pattern>/DeleteDepSerlvet</url-pattern>
  </servlet-mapping>

	<!-- =======================设置监听======================== -->
	<listener>
		<listener-class>listener.VisitCountListener</listener-class>
	</listener>

	<!-- ==================设置session过期时间=================== -->

	<!-- ===================设置Cookie过滤器===================== -->

	<!-- ===================设置字符编码过滤器===================== -->
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<!-- ====================设置登录过滤器======================= -->
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<!-- ====================================================== -->

	<welcome-file-list>
		<welcome-file>login/login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
